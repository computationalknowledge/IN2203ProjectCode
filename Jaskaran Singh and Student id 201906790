package LionTiger;

import java.util.Random;

class Feline {

	public float strength;
	public void setStrength() {
		Random rand  = new Random();
		this.strength  = rand.nextInt(100); // random set strength 
			
	}
	
	public float getStrength() {
		return this.strength;
		
		
	}
}

